#:import HangManFig2 figures.hangmanfig2

<ShareScreen>:
	name: '_share_screen_'
	BoxLayout:
		HangManFig2:
			size_hint_x: 0.7
			Button:
				text: 'Back'
				pos_hint: {'x': 0, 'y': 0}
				size_hint: (0.1, 0.1)
				on_release:
					root.manager.transition.direction = 'right'
					root.manager.current = '_main_screen_'
		RelativeLayout: 
			size_hint_x: 0.3
			Button:
				text: 'GitHub'
				pos_hint: {'x': 0.1, 'y': 0.80}
				size_hint: (0.8, 0.1)

