#:import CustomButton widgets.custombutton
#:import BackGround1 backgrounds.background1
#:import KeyBoard widgets.keyboard
#:import FrameBase figures.framebase

<GameScreen>:
	name: '_game_screen_'
	BackGround1:

	CustomButton:
		pos_hint: {'x': 0, 'y': 0}
		text: 'Back'
		icon: 'skip-previous'
		on_release: 
			root.manager.transition.direction = 'right'
			root.manager.current = '_main_screen_'

	BoxLayout:
		orientation: 'horizontal'
		RelativeLayout:
			id: drawing_area
			w: 950
			h: 750
			canvas.before:
				PushMatrix:
				Scale:
					x: self.width / self.w
					y: self.height / self.h
			canvas: 
				Line:
					points: (600, 700, 600, 623)
					width: 3
				PopMatrix:

			FrameBase:

		BoxLayout:
			orientation: 'vertical'
			RelativeLayout:

			RelativeLayout:	
				KeyBoard:


