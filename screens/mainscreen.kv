#:import HangManFig1 figures.hangmanfig1
#:import MDIconButton kivymd.uix.button.MDIconButton
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDRoundFlatIconButton kivymd.uix.button.MDRoundFlatIconButton
#:import MDFloatingActionButton kivymd.uix.button.MDFloatingActionButton
<MDRoundFlatIconButton>:
	font_size:'28sp'
	user_font_size:"64sp"
	text_color: [1,1,1,1]
	background_normal:''
	bold:True
	md_bg_color:[1,0.3,0.5,1]


<MainScreen>:
	name: '_main_screen_'
	BoxLayout:	
		HangManFig1:
			size_hint_x: 0.7
		RelativeLayout:
			size_hint_x: 0.3
			MDRoundFlatIconButton:
				text: 'Play'
				icon:'gamepad'
				pos_hint: {'x': 0.1, 'y': 0.80}
				size_hint: (0.8, 0.1)
				on_release: 
					root.manager.transition.direction = 'left'
					root.manager.current = '_game_screen_'

			MDRoundFlatIconButton:
				text: 'Practice'
				icon: 'grain'
				pos_hint: {'x': 0.1, 'y': 0.65}
				size_hint: (0.8, 0.1)
				on_release:
					root.manager.transition.direction = 'left'
					root.manager.current = '_game_screen_'

			MDRoundFlatIconButton:
				text: 'Share'
				icon: 'share'
				pos_hint: {'x': 0.1, 'y': 0.50}
				size_hint: (0.8, 0.1)
				on_release: 
					root.manager.transition.direction = 'left'
					root.manager.current = '_share_screen_'
				
			MDRoundFlatIconButton:
				text: 'Credits'
				icon: 'info-outline'
				pos_hint: {'x': 0.1, 'y': 0.35}
				size_hint: (0.8, 0.1)
				on_release: 
					root.manager.transition.direction = 'left'
					root.manager.current = '_credits_screen_'

			MDRoundFlatIconButton:
				text: 'Quit'
				icon: 'xbox'
				pos_hint:{'x':0.1,'y': 0.2}
				size_hint:(0.8,0.1)
				on_release:
					root.manager.current=app.exit()
