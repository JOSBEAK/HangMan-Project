#:kivy 2.0.0
#:import FrameBase figures.framebase
#:import HangManFig1 figures.hangmanfig1
#:import CustomButton widgets.custombutton
#:import BackGround1 backgrounds.background1

<MainScreen>:
	name: '_main_screen_'
	BackGround1:	
	BoxLayout:
		RelativeLayout:
			size_hint_x: 0.7
			FrameBase:
			HangManFig1:

		RelativeLayout:
			size_hint_x: 0.3
			CustomButton:
				text: ' Play'
				icon: 'gamepad'
				pos_hint: {'x': 0.1, 'y': 0.8}
				size: root.width / 5, root.height / 10

				on_release: 
					root.manager.transition.direction = 'left'
					root.manager.current = '_game_screen_'

			CustomButton:
				text: ' Share'
				icon: 'share'
				pos_hint: {'x': 0.1, 'y': 0.65}
				size: root.width / 5, root.height / 10

				on_release: 
					root.manager.transition.direction = 'left'
					root.manager.current = '_share_screen_'
				
			CustomButton:
				text: ' Quit'
				icon: 'close-circle'
				pos_hint: {'x': 0.1,'y': 0.5}
				size: root.width / 5, root.height / 10

				on_release:
					root.show_confirmation_dialog()
