#:import Frame figures.frame
#:import HangManFig1 figures.hangmanfig1
#:import CustomButton widgets.custombutton
#:import BackGround1 backgrounds.background1

<MainScreen>:
	name: '_main_screen_'
	BackGround1:	
	BoxLayout:
		RelativeLayout:
			size_hint_x: 0.7
			Frame:
			HangManFig1:

		RelativeLayout:
			size_hint_x: 0.3
			CustomButton:
				text: ' Play'
				icon: 'gamepad'
				pos_hint: {'x': 0.1, 'y': 0.8}

				on_release: 
					root.manager.transition.direction = 'left'
					root.manager.current = '_game_screen_'

			CustomButton:
				text: ' Practice'
				icon: 'grain'
				pos_hint: {'x': 0.1, 'y': 0.65}
				on_release:
					root.manager.transition.direction = 'left'
					root.manager.current = '_game_screen_'

			CustomButton:
				text: ' Share'
				icon: 'share'
				pos_hint: {'x': 0.1, 'y': 0.50}
				on_release: 
					root.manager.transition.direction = 'left'
					root.manager.current = '_share_screen_'
				
			CustomButton:
				text: ' Credits'
				icon: 'lock'
				pos_hint: {'x': 0.1, 'y': 0.35}
				on_release: 
					root.manager.transition.direction = 'left'
					root.manager.current = '_credits_screen_'

			CustomButton:
				text: ' Quit'
				icon: 'xbox'
				pos_hint:{'x': 0.1,'y': 0.2}
				on_release:
					root.manager.current = app.stop()
