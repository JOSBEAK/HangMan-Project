<MenuScreen>:
    RelativeLayout:
            
        Button:
            pos_hint:{'x':0.4,'y':0.6}
            size_hint:(0.2,0.08)
            text: 'PLAY'
            color:(0.22,1,0.34,1)
            bold: True
            outline_width: 5
            on_release:
                root.manager.transition.direction='right'
                app.animate_the_button(self)
                root.manager.current = 'Topics'
        Button:
            pos_hint: {'x':0.4,'y':0.12}
            size_hint: (0.2,0.08)
            text: 'Quit'
            bold:True
            outline_width:5
            color:(0.22,1,0.34,1)
            on_release:
            
                app.exit() 
